<div class="text-center">
  <%= form_with url: define_path, method: :post, class: "flex items-center justify-center gap-8" do |form| %>
    <div class="relative flex-grow max-w-3xl">
      <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
      <%= form.text_field :term, class: "w-full text-2xl py-3 pl-12 pr-24 border-0 border-b-2 border-gray-300 focus:border-gray-600 focus:ring-0 outline-none bg-transparent", placeholder: "Enter a termâ€¦", required: true %>
    </div>
    <%= form.submit "Define", class: "text-2xl bg-blue-500 text-white px-6 py-3 rounded-md hover:bg-blue-600 transition duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  <% end %>
</div>
